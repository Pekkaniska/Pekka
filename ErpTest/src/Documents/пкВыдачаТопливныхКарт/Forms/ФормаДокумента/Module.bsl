&НаСервере
Функция ПолучитьТСПоКарте(тТопливнаяКарта)
	
	тРезультат = "";
	
	Если ЗначениеЗаполнено(тТопливнаяКарта) Тогда
		Если ТипЗНЧ(тТопливнаяКарта.КомуВыдана) = Тип("СправочникСсылка.ТранспортныеСредства") Тогда
			тРезультат = тТопливнаяКарта.КомуВыдана;
		КонецЕсли;
	КонецЕсли;
	
	Возврат тРезультат;
	
КонецФункции

&НаКлиенте
Процедура ТопливныеКартыТопливнаяКартаПриИзменении(Элемент)
	
	Если Элементы.ТопливныеКарты.ТекущиеДанные = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	тТС = ПолучитьТСПоКарте(Элементы.ТопливныеКарты.ТекущиеДанные.ТопливнаяКарта);
	Если ЗначениеЗаполнено(тТС) Тогда
		Элементы.ТопливныеКарты.ТекущиеДанные.ТС = тТС;
	КонецЕсли;
	
КонецПроцедуры

