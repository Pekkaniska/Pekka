&НаСервере
Процедура ОбновитьДанные()
	//устанавливаем карту маршрута
	КартаМаршрута = БизнесПроцесс.ПолучитьОбъект().ПолучитьКартуМаршрута();
КонецПроцедуры


////////////////////////////////////////////////////////////////////////////////
// ОБРАБОТЧИКИ СОБЫТИЙ ФОРМЫ

&НаКлиенте
Процедура ПриОткрытии(Отказ)
	Если ВладелецФормы = Неопределено Тогда 
		Отказ = Истина;
	КонецЕсли;
	
	ОбновитьДанные();
КонецПроцедуры

&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	Если НЕ Параметры.Свойство("БизнесПроцесс") Тогда
		Отказ = Истина;
		СтандартнаяОбработка = Ложь;
		Возврат;
	КонецЕсли;
	
	БизнесПроцесс = Параметры.БизнесПроцесс;
КонецПроцедуры

&НаКлиенте
Процедура ПриЗакрытии(ЗавершениеРаботы)
	
	Если Не ЗавершениеРаботы Тогда 
		Оповестить("ЗакрытаФормаКартаМаршрута",, ЭтаФорма);
	КонецЕсли;
	
КонецПроцедуры
