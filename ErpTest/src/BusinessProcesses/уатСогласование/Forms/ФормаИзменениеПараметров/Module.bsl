		ОчиститьСообщения();
		Попытка
			Записать();
			Закрыть(КодВозвратаДиалога.ОК);
		Исключение
			Сообщить("Не удалось записать бизнес-процесс", СтатусСообщения.Внимание);
		КонецПопытки;
	Иначе
		Закрыть(КодВозвратаДиалога.ОК);
	КонецЕсли;
КонецПроцедуры


