			НоваяСтрока.Пользователь = ТекСтрока.Пользователь;
			НоваяСтрока.Право = ТекСтрока.Право;
			НоваяСтрока.Объект = ТекСтрока.Объект;
			НоваяСтрока.Доступность = ТекСтрока.Доступность;
			НоваяСтрока.Изменено = Истина;
